{
  "name": "membership-initiation-system",
  "version": "1.0.0",
  "description": "Exclusive membership platform with custom authentication protocol",
  "private": true,
  "workspaces": [
    "services/*",
    "frontend/*",
    "shared/*",
    "mobile-app"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:services\" \"npm run dev:frontend\"",
    "dev:services": "concurrently \"npm run dev --workspace=auth-service\" \"npm run dev --workspace=invitation-service\" \"npm run dev --workspace=member-service\" \"npm run dev --workspace=media-service\" \"npm run dev --workspace=audit-service\"",
    "dev:frontend": "concurrently \"npm run dev --workspace=web-portal\" \"npm run dev --workspace=admin-dashboard\"",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "test:integration": "jest --config testing/jest.integration.config.js",
    "test:performance": "jest --config testing/jest.performance.config.js",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "type-check": "tsc --noEmit",
    "docker:build": "docker-compose -f deployments/docker/docker-compose.dev.yml build",
    "docker:up": "docker-compose -f deployments/docker/docker-compose.dev.yml up -d",
    "docker:down": "docker-compose -f deployments/docker/docker-compose.dev.yml down",
    "db:migrate": "npm run migrate --workspace=member-service",
    "db:seed": "npm run seed --workspace=member-service"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/membership-initiation-system.git"
  },
  "keywords": [
    "membership",
    "authentication",
    "identity",
    "microservices",
    "typescript",
    "nodejs"
  ],
  "author": "Membership Platform Team",
  "license": "UNLICENSED"
} 